
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
  <form action="/newReview" method="POST" id="new-review-form">
    <h6 class="display-2 text-center">New Course Review</h6>
    {{!-- Form group for the class info --}}
    <div class="form-group">
      <h3 class="text-center">Course Information</h3>
      <div class="form-group">
        {{!-- Info Row 1 --}}
        <div class="form-row">
          <div class="col">
            <label for="course-department-input">Department</label>
            <select class="form-control selectpicker" id="course-department-input" title="Department" name="department" data-live-search="true" style="" styleBase="form-control" required>
              {{#each departments}}
              <option value="{{name}}">{{name}}</option>
              {{/each}}
            </select>
          </div>
          <div class="col">
            <div class="form-group">
              <label for="course-faculty-input">Professor / Faculty Member</label>
              <select class="form-control selectpicker" title="Professor/Faculty Member" data-live-search="true" style="" styleBase="form-control" name="faculty" id="course-faculty-input" required>
                {{#each faculty}}
                <option value="{{name}}">{{name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
        </div>
        {{!-- Info Row 2 --}}
        <div class="form-row">
          <div class="col-3">
            <div class="form-group">
              <label for="course-number-input">Course Number</label>
              <input class="form-control" type="text" name="courseNumber" id="course-number-input" list="courseList" required>
              <datalist id="courseList">
                {{#each courses}}
                  <option value="{{courseNumber}}"></option>
                {{/each}}
              </datalist>
              <small>Ex. "ECO101"</small>
              {{#if spaceInCourseNumber}}
                <div class="alert alert-danger">
                  Course number cannot have a space: must use format "ECO101".
                </div>
              {{/if}}
            </div>
          </div>
          <div class="col-9">
            <div class="form-group">
              <label for="course-title-input">Course Title</label>
              <input class="form-control" type="text" name="courseTitle" id="course-title-input" required>
              <small>Ex. "Introductory Economics"</small>
            </div>
          </div>
        </div>

      </div>

    </div>
    <hr class="my-4"></hr>


    {{!-- Form group for the actual review content --}}
    <div class="form-group">
      <h3 class="text-center">Your Review</h3>
      <div class="form-group">
        <label for="course-description-input">Course Description</label>
        <textarea class="form-control" name="description" id="course-description-input" cols="30" rows="10" required></textarea>
        <small>Your <strong>objective description</strong> of the course (structure, assignments, lectures, etc.)</small>
      </div>
      <div class="form-group">
        <label for="course-review-input">Review</label>
        <textarea class="form-control" name="review" id="course-review-input" cols="30" rows="10" required></textarea>
        <small>Your <strong>subjective review</strong> of the course</small>
      </div>
      <div class="form-group">
        <script>
          function show_value(x){
        document.getElementById("slider_value").innerHTML=x;}</script>

        <label for="course-rating-input">Rating</label>
        <center><span id="slider_value" style="color:#ac1a2f;"></span></center>
       <input class="form-control" type="range" list="tickmarks" min="0" max="10" step="1" name="rating" id="course-rating-input" onchange="show_value(this.value);" required>
        <datalist id="tickmarks">
          <option value="0" label="0"></option>
          <option value="1"></option>
          <option value="2"></option>
          <option value="3"></option>
          <option value="4"></option>
          <option value="5" label="5"></option>
          <option value="6"></option>
          <option value="7"></option>
          <option value="8"></option>
          <option value="9"></option>
          <option value="10" label="10"></option>
      </datalist>
        <small>Your 1-10 rating of the course</small>
      </div>
    </div>
    <div class="form-group text-center">
      <input type="submit" class="btn btn-primary btn-davidson-red btn-lg" value="Submit">
    </div>
  </form>
  </div>
  </div>
</div>
