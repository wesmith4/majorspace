<div class="container">
  <div class="row justify-content-center">
  <div class="col-11">
  <div class="row row-cols-1 row-cols-md-2">
    {{#each faculty}}
      <div class="col mb-4">
        <div class="card h-100">
          <div class="row no-gutters">
            <div class="col-md-5">
              <img src="{{imageUrl}}" alt="faculty image" class="card-img" style="max-width: 100%;">
            </div>
            <div class="col-md-7">
              <div class="card-body">
                <a href="{{profileUrl}}" target="_blank"><h5 class="card-title">{{name}}</h5></a>
                <h6 class="card-text">{{titles}}</h6>
                <ul class="card-text" style="list-style-type: none; padding-inline-start: 0%;">
                  <li>Phone: {{phone}}</li>
                  <li>Email: <a href="mailto:{{email}}" target="_blank">{{email}}</a></li>
                  <li>Office: {{office}}</li>
                </ul>
              </div>
            </div>
          </div>

        </div>
      </div>
    {{/each}}
  </div>
  </div>
  </div>
</div>
